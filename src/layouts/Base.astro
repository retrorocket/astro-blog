---
import TwSizeIndicator from "@components/TwSizeIndicator.astro";
import config from "@config/config.json";
import { plainify } from "@lib/utils/textConverter";
import Footer from "@partials/Footer.astro";
import Header from "@partials/Header.astro";
import Loadads from "@components/Loadads.astro";
import "@styles/main.scss";
import "@styles/fonts.scss";

// types for frontmatters
export interface Props {
  title?: string;
  meta_title?: string;
  excerpt?: string;
  image?: string;
  noindex?: boolean;
  canonical?: string;
  noads?: boolean;
}

// distructure frontmatters
const { title, meta_title, excerpt, image, noindex, canonical, noads } =
  Astro.props;

const plainifyTitle = plainify(
  meta_title
    ? meta_title
    : title
    ? title + " - " + config.site.title
    : config.site.title
);
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <!-- favicon -->
    <link rel="shortcut icon" href={config.site.favicon} />
    <!-- theme meta -->
    <meta name="theme-name" content="Northendlab | Blog Template" />
    <meta name="msapplication-TileColor" content="#000000" />
    <meta
      name="theme-color"
      media="(prefers-color-scheme: light)"
      content="#fff"
    />
    <meta
      name="theme-color"
      media="(prefers-color-scheme: dark)"
      content="#000"
    />
    <meta name="generator" content={Astro.generator} />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />

    <!-- responsive meta -->
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=5"
    />

    <!-- title -->
    <title>{plainifyTitle}</title>

    <!-- canonical url -->
    {
      canonical && (
        <link
          rel="canonical"
          href={`${config.site.base_url}/${canonical}`}
          item-prop="url"
        />
      )
    }

    <!-- noindex robots -->
    {noindex && <meta name="robots" content="noindex,nofollow" />}

    <!-- meta-description -->
    <meta
      name="description"
      content={excerpt ? excerpt : config.metadata.meta_description}
    />

    <!-- author from config.json -->
    <meta name="author" content={config.metadata.meta_author} />

    <!-- og-title -->
    <meta property="og:title" content={plainifyTitle} />

    <!-- og-description -->
    <meta
      property="og:description"
      content={excerpt ? excerpt : config.metadata.meta_description}
    />
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content={`${config.site.base_url}/${Astro.url.pathname.replace("/", "")}`}
    />

    <!-- twitter-title -->
    <meta name="twitter:title" content={plainifyTitle} />

    <!-- twitter-description -->
    <meta
      name="twitter:description"
      content={excerpt ? excerpt : config.metadata.meta_description}
    />

    <!-- og-image -->
    <meta
      property="og:image"
      content={`${config.site.base_url}${
        image ? image : config.metadata.meta_image
      }`}
    />

    <!-- twitter-image -->
    <meta
      name="twitter:image"
      content={`${config.site.base_url}${
        image ? image : config.metadata.meta_image
      }`}
    />
    <meta name="twitter:card" content="summary_large_image" />

    <link
      rel="alternate"
      type="application/rss+xml"
      title={`${config.site.title} Blog Feed`}
      href="/feed.xml"
    />
    <link rel="sitemap" type="application/xml" href="/sitemap.xml" />
  </head>
  <body>
    <TwSizeIndicator />
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
    {!noads && <Loadads />}
  </body>
</html>
