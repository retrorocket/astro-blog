<script>
  let lazyloadads = false;
  const onScrollLoadAds = () => {
    if (!lazyloadads) {
      const url =
        "https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9043961430295462";
      const ad = document.createElement("script");
      ad.async = true;
      ad.setAttribute("crossorigin", "anonymous");
      ad.src = url;
      document.body.appendChild(ad);
      lazyloadads = true;
      window.removeEventListener("scroll", onScrollLoadAds);
      window.removeEventListener("pointermove", onScrollLoadAds);
    }
  };
  // {once: true} を指定すると他のリスナーを削除できないので手動でremoveする
  window.addEventListener("scroll", onScrollLoadAds);
  window.addEventListener("pointermove", onScrollLoadAds);
</script>
